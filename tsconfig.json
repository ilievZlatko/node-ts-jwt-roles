{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"typeRoots": ["./node_modules/@types", "./typings"]
	},
	"exclude": ["./node_modules"]
}
