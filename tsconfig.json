{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"baseUrl": ".",
		"outDir": "build",
		"strict": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"paths": {
			"*": ["./node_modules/*", "./src/types/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["./node_modules"]
}
